<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NomadApp.Views.LoginNomadaPage">
    <ContentPage.Content>
        <StackLayout
            Padding="10,20,10,20">

            <Image
                Source="alta_gratis"
                WidthRequest="200">
            </Image>

            <StackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="CenterAndExpand"
                    Margin="100"
                    Text="¿POR QUÉ USAR?"/>
            </StackLayout>

            <StackLayout>
                <Button
                    BackgroundColor="BlueViolet"
                    HorizontalOptions="FillAndExpand"
                    Text="DESCUBRIR ESPACIOS"
                    TextColor="White">
                </Button>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>